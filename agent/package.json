{
  "name": "agent",
  "version": "1.0.0",
  "description": "Voltz XMTP Agent - Messaging Bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
     "dev": "tsx watch src/simple-agent.ts",
    "dev:simple": "tsx watch src/simple-agent.ts",
    "dev:full": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cli": "tsx src/cli.ts",
    "cli:test": "tsx src/cli.ts test-connection",
    "cli:chat": "tsx src/cli.ts chat",
    "cli:send": "tsx src/cli.ts send",
    "cli:info": "tsx src/cli.ts info",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist node_modules *.db3"
  },
  "dependencies": {
    "@xmtp/agent-sdk": "^1.1.15",
    "@xmtp/content-type-reaction": "^2.0.2",
    "@xmtp/content-type-remote-attachment": "^2.0.2",
    "@xmtp/content-type-reply": "^2.0.2",
    "@xmtp/node-sdk": "^4.5.0-rc1",
    "@xmtp/proto": "^3.88.0",
    "@xmtp/xmtp-js": "^13.0.4",
    "axios": "^1.7.9",
    "commander": "^13.0.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.0",
    "vitest": "^2.1.8"
  }
}
