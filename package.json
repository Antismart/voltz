{
  "name": "voltz",
  "version": "1.0.0",
  "private": true,
  "description": "AI-Powered Event Networking Platform on 0G Infrastructure",
  "workspaces": [
    "frontend",
    "backend",
    "contracts",
    "agent"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:agent\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:agent": "npm run dev --workspace=agent",
    "dev:contracts": "npm run dev --workspace=contracts",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:contracts": "npm run compile --workspace=contracts",
    "test": "npm run test --workspaces",
    "test:contracts": "npm run test --workspace=contracts",
    "test:backend": "npm run test --workspace=backend",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "deploy:contracts": "npm run deploy --workspace=contracts"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
